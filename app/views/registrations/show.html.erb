<div class="row">
  <div class="col-sm-2">
  </div>
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-2">
        <h1>Sign up</h1>
        <div class="col-sm-12" style="background-color:#63c0de"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= bootstrap_form_with model: @user, url: "/user_auths/registrations", method: "post", local: true do |f| %>
          <%= f.email_field :email %>
          <%= f.password_field :password %>
          <%= f.submit "Sign up", class: "btn btn-info" %>
        <% end %>
      </div>

    </div>
  </div>
  <div class="col-sm-2">
  </div>
</div>