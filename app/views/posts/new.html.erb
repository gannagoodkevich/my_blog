<% content_for :title do %>
  <%= Organization.find(params[:organization_id]).title %>
<% end %>

<% @organization = Organization.find(params[:organization_id]) %>
<% @users = [] %>

<div class="row">

  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h1><%= @organization.title %>: <%= t :create_pots %></h1>
  </div>
  <div class="col-sm-3"></div>
</div>
<div class="row"><p></p></div>
<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
  <% if request.referrer.split("/")[-2]=="users" %>
    <%@user_id  = request.referrer.split("/")[-1]%>
    <% @users << User.find(@user_id)%>
  <% else %>
    <% @users = @organization.users.all%>
  <%end %>
    <%= bootstrap_form_with model: @post, url: organization_posts_path, method: :post, local: true do |form| %>
      <p>
        <%= form.select(:name, @users.collect{|u| u.name}, label: t(:name))%>
      </p>

      <p>
        <%= form.text_area :content, label: t(:content)%>
      </p>

      <p>
        <%= form.collection_select(:status, Post.statuses, :first, :first, label: t(:status))%>
      </p>

      <p>
        <%= form.submit class: "btn btn-info", label: "OK"%>
      </p>
    <% end %>
</div>
  <div class="col-sm-3"></div>
</div>



