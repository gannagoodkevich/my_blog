<% post_status.each do |post| %>
    <div class="row">
      <div class="col-sm-12" style="background-color:#63c0de"></div>
    </div>
    <div class="row">
      <div class="col-sm-12"><h3><%= post.content %></h3></div>
    </div>
    <div class="row">
      <div class="col-sm-6"><h4><%= t :posted_by%>: <%= link_to post.user.name, organization_user_path(Organization.find(params[:organization_id]), post.user)%></h4></div>
      <div class="col-sm-5"><h4><%= t :status %>: <%= post.status %></h4></div>
      <div class="col-sm-1"><%= button_to edit_organization_post_path(@organization, post), method: "get", class: "btn btn-info" do%>
          <%= t :edit %>
        <%end %></div>
    </div>
  <p></p>
<% end %>
<%= paginate post_status, window: 2%>