<% content_for :title do %>
  <%= Organization.find(params[:organization_id]).title %>
<% end %>

<% @organization = Organization.find(params[:organization_id]) %>

<div class="row">
  <div class="col-sm-2">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <h3>Status</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= render 'posts/filter' %>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-8">
        <h1> <%= @organization.title%></h1>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="row">
      <div class="col-sm-10">
        <%@post_status = @posts.active %>
        <%if params[:active]%>
          <% @post_status = @posts.active%>
        <%end %>
        <%if params[:inactive]%>
          <% @post_status = @posts.inactive%>
        <%end %>
        <%if params[:under_review]%>
          <% @post_status = @posts.under_review%>
        <%end %>
        <%if params[:archived]%>
          <% @post_status = @posts.archived%>
        <%end %>
        <% @post_status.each do |post| %>
          <%if Post.active.include? post %>
            <% @status = :active%>
          <%end %>
          <%if Post.inactive.include? post%>
            <% @status = :inactive%>
          <%end %>
          <%if Post.under_review.include? post%>
            <% @status = :under_review%>
          <%end %>
          <%if Post.archived.include? post%>
            <% @status = :archived%>
          <%end %>
          <div class="row">
            <div class="col-sm-12" style="background-color:#63c0de"></div>
          </div>
          <div class="row">
            <div class="col-sm-12"><h3><%= post.content %></h3></div>
          </div>
          <div class="row">
            <div class="col-sm-6"><h4><%= t :posted_by%>: <%= link_to post.user.name, organization_user_path(@organization, post.user)%></h4></div>
            <div class="col-sm-5"><h4><%= t :status %>: <%= @status %></h4></div>
            <div class="col-sm-1"><%= button_to edit_organization_post_path(@organization, post), method: "get", class: "btn btn-info" do%>
                <%= t :edit %>
              <%end %></div>
          </div>
          <p></p>
        <% end %>
        <%= paginate @post_status, window: 2%>
      </div>

    </div>
  </div>
  <div class="col-sm-2">
    <div class="col-sm-1"><%= button_to new_organization_post_path(@organization), method: "get", class: "btn btn-info" do%>
        Create post
      <%end %></div>
  </div>
</div>