<% content_for :title do %>
  <%= Organization.find(params[:organization_id]).title %>: <%= t :users %>
<% end %>

<div class="row">

  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h1><%= Organization.find(params[:organization_id]).title %>: <%= t :users %></h1>
    <div class="col-sm-12" style="background-color:#63c0de"></div>
  </div>
  <div class="col-sm-3"></div>
</div>
<div class="row"><p></p></div>
  <div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <table class="table table-striped">
      <tr>
        <th><%= t :name %></th>
        <th><%= t :status%></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, organization_user_path(Organization.find(params[:organization_id]), user) %></td>
          <td><% if user.active %>
              <%= "active" %>
              <%else %>
            <%="inactive" %>
              <%end%>
          </td>
      <% end %>
    </table>
    <%= paginate @users, window: 2%>

  </div>
  <div class="col-sm-3">

  </div>

</div>
<div class="row">
  <div class="col-sm-4"></div>

  <div class="col-sm-8">
    <div class="col-sm-1"></div>
    <div class="col-sm-11"><%= button_to new_organization_user_path(Organization.find(params[:organization_id])), method: "get", class: "btn btn-info" do%>
        <%= t :create_user %>
      <%end %></div>
  </div>
  </div>
</div>
