<% content_for :title do %>
  <%= Organization.find(params[:organization_id]).title %>
<% end %>

<div class="row">

  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h1><%= Organization.find(params[:organization_id]).title %></h1>
    <div class="col-sm-12" style="background-color:#63c0de"></div>
  </div>
  <div class="col-sm-3"></div>
</div>
<div class="row"><p></p></div>
<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="col-sm-9">
      <h2><%= @user.name %></h2>
    </div>
    <div class="col-sm-3">
      <div class="row">
      <h3>Status: <%if @user.active %>
          active
        <%else %>
          inactive
        <%end %>
      </h3>
        <%= button_to organization_user_path(Organization.find(params[:organization_id]), @user), method: "get", class: "btn btn-info" do%>
          <%if @user.active %>
            Deactivate
            <% @user.update(active: false )%>
            <%else %>
            Activate
            <% @user.update(active: true )%>
            <%end %>
        <%end %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
  </div>

</div>

<div class="row">
  <div class="col-sm-3"></div>
<div class="col-sm-6">
  <h3>Posts: </h3></div>
</div>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-sm-12" style="background-color:#63c0de"></div>
      </div>
      <div class="row">
        <div class="col-sm-12"><h3><%= post.content %></h3></div>
      </div>
      <div class="row">
        <div class="col-sm-6"><h4>Posted by:
          <%= link_to post.user.name, organization_user_path(Organization.find(params[:organization_id]), @user) %></h4></div>
        <div class="col-sm-5"><h4>Status: </h4></div>
        <div class="col-sm-1"><%= button_to "https://google.com", method: "get", class: "btn btn-info" do%>
            Edit
          <%end %></div>
      </div>
      <p></p>

    <% end %>
    <%= paginate @posts, window: 2%>

  </div>
  <div class="col-sm-3">
  </div>

</div>


<div class="row">
  <div class="col-sm-5"></div>

  <div class="col-sm-7">
    <div class="col-sm-1"></div>
    <div class="col-sm-11"><%= button_to "https://google.com", method: "get", class: "btn btn-info" do%>
        Create post
      <%end %></div>
  </div>
</div>
</div>