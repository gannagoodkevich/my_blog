<%= bootstrap_form_with scope: :user, url: organization_users_path, local: true do |form| %>
  <p>
    <%= form.text_field :name, label: t('models.user.name')%>
  </p>

  <p>
    <%= form.collection_select(:active, [["active", true], ["inactive", false]], :last, :first, label: t('models.post.status'))%>
  </p>

  <p>
    <%= form.submit class: "btn btn-info"%>
  </p>
<% end %>